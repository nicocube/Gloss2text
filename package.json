  "author": "Nicolas Lochet",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/nicocube/gloss2text/issues"
  },
  "homepage": "https://github.com/nicocube/gloss2text#readme",
  "devDependencies": {
    "eslint": "^2.13.1",
    "istanbul": "^0.4.5",
    "tap-dot": "^1.0.5",
    "tape": "^4.6.0"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "js-yaml": "^3.6.1",
    "meow": "^3.7.0",
    "minus-watch": "0.0.1"
  }
