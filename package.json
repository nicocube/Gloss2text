{
  "name": "gloss2text",
  "version": "0.1.0",
  "description": "A tool to help language production from gloss notations.",
  "main": "index.js",
  "scripts": {
    "pretest": "npm run lint",
    "test": "tape test/**/*.spec.js |tap-dot",
    "autotest": "nodemon -e js,yml -x 'tape test/**/*.spec.js |tap-dot'",
    "coverage": "istanbul cover tape test/**/*.spec.js",
    "lint": "eslint index.js lib/ test/",
    "autolint": "nodemon -x eslint index.js lib/ test/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nicocube/gloss2text.git"
  },
